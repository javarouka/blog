<nav class="main-nav nav flex-column nav-pills">
    <% for (var i in theme.menu) { %>
    <% 
        var menu = theme.menu[i]
        var icon = menu.icon;
        var href = url_for(menu.path);
        var currentPath = url_for(page.path);
    %>
        <a class="" href="<%- href %>">
            <% if(icon) { %><i class="fa fa-<%-icon%>" style="color: #333; margin-right: 3px;"></i><% } %>
            <%= __('index.' + i.toLowerCase()) %>
        </a>
    <% } %>
    <!-- <%- list_categories({
        depth: 1,
        style: 'cloud',
        class: 'nav flex-column',
        show_count: false,
    }) %> -->
</nav>
<div class="social-links">
    <% for (var i in theme.customize.social_links) { %>
        <% if (theme.customize.social_links[i]) { %>
            <a class="social-tooltip m-1"title="<%= i %>" href="<%- url_for(theme.customize.social_links[i]) %>" target="_blank">
                <i class="icon fa fa-<%= i %>"></i>
            </a>
        <% } %>
    <% } %>
</div>